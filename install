       â–€â–ˆâ–„    â–€â–ˆâ–ˆâ–ˆâ–ˆâ–€    â–„â–ˆâ–€u
          â–€â–€â–€â–„â–„â–„â–„â–„â–„â–„â–€â–€â–€

         PhantomPHP Server
         Fast and Reliable.

         Made by Uthman Dev
    ${NC}"
    echo -e "\n"
    
  set -e
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  green "       ğŸŒŸ Installing Phantom-PHP ğŸŒŸ        "
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  space
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  blue " Checking Dependencies..."
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

  sleep 1

  # Check PHP installation
  blue "â” Checking if PHP is installed..."
  space
  sleep 1

  if command -v php >/dev/null 2>&1; then
    green "âœ” PHP is installed\n"
  else
    red "âœ˜ PHP is not installed!"
    read -p "ğŸ‘‰ Would you like to install PHP now? (y/n): " choice
    if [[ "$choice" =~ ^[yY]$ ]]; then
      yellow "ğŸš€ Installing PHP..."
      apt install php -y
      until command -v php >/dev/null 2>&1; do
        sleep 1
      done
      green "âœ” PHP installed successfully!\n"
    else
      red "âš  PHP is required to proceed. Exiting..."
      exit 1
    fi
  fi
  sleep 1

  # Check MySQL installation
  blue "â” Checking if MySQL is installed..."
  space
  sleep 1

  if command -v mysql >/dev/null 2>&1; then
    green "âœ” MySQL is installed\n"
  else
    red "âœ˜ MySQL is not installed!"
    read -p "ğŸ‘‰ Would you like to install MySQL now? (y/n): " choice
    if [[ "$choice" =~ ^[yY]$ ]]; then
      yellow "ğŸš€ Installing MySQL..."
      apt install phpmyadmin -y
      until command -v mysql >/dev/null 2>&1; do
        sleep 1
      done
      green "âœ” MySQL installed successfully!\n"
    else
      red "âš  MySQL is required to proceed. Exiting..."
      exit 1
    fi
  fi
  sleep 1

  # Check MariaDB installation
  blue "â” Checking if MariaDB is installed..."
  space
  sleep 1

  if command -v mariadb >/dev/null 2>&1; then
    green "âœ” MariaDB is installed\n"
  else
    red "âœ˜ MariaDB is not installed!"
    read -p "ğŸ‘‰ Would you like to install MariaDB now? (y/n): " choice
    if [[ "$choice" =~ ^[yY]$ ]]; then
      yellow "ğŸš€ Installing MariaDB..."
      apt install mariadb -y
      until command -v mariadb >/dev/null 2>&1; do
        sleep 1
      done
      green "âœ” MariaDB installed successfully!\n"
    else
      red "âš  MariaDB is required to proceed. Exiting..."
      exit 1
    fi
  fi
  sleep 1

  green "ğŸ‰ All dependencies are installed! Preparing Phantom-PHP...\n"
  sleep 1

  yellow "ğŸš€ Setting up Phantom-PHP...\n"
  sleep 1
createSymlink
sleep 1
  blue "ğŸ›  Initializing phpMyAdmin server...\n"
  sleep 1
  cd || exit
  mysql_install_db &>/dev/null
  mariadbd-safe -u root &>/dev/null &

  if cd ../usr/share/phpmyadmin &>/dev/null; then
    green "âœ” Navigated to phpMyAdmin directory"
    mkdir -p ../usr/share/phpmyadmin/etc/php
    
    echo 'error_reporting = 0' >> ../usr/share/phpmyadmin/etc/php/php.ini
    
    # Check if error_reporting is properly set in php.ini
    if grep -q "error_reporting = 0" ../usr/share/phpmyadmin/etc/php/php.ini; then
    else
        exit 1
    fi
else
    red "âœ˜ phpMyAdmin directory not found!"
    exit 1
fi

  if [ -f "config.inc.php" ]; then
    yellow "âš  config.inc.php file already exists. Replacing..."
    rm config.inc.php &>/dev/null
  fi
  yellow "ğŸ“„ Creating a new config.inc.php file..."
  
cat <<EOF > config.inc.php
<?php
/**
 * phpMyAdmin sample configuration, you can use it as base for
 * manual configuration. For easier setup you can use setup/
 *
 * All directives are explained in documentation in the doc/ folder
 * or at <https://docs.phpmyadmin.net/>.
 */

declare(strict_types=1);

/**
 * This is needed for cookie-based authentication to encrypt the cookie.
 * Needs to be a 32-bytes long string of random bytes. See FAQ 2.10.
 */
\$cfg['blowfish_secret'] = 'YOUR_RANDOM_32_BYTE_STRING_HERE'; /* YOU MUST FILL IN THIS FOR COOKIE AUTH! */

