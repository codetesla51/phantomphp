createSymlink() {
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  green "      Setting up PhantomPHP       "
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  space

  blue "â”  Checking if 'phantomphp' folder exists..."
  sleep 1
  if [[ ! -d "$HOME/phantomphp" ]]; then
    red "âœ˜  Error: 'phantomphp' folder not found in the home directory."
    return 1
  fi
  green "âœ”  Found 'phantomphp' folder."
  space

  # Check if PhantomPHP script is executable
  blue "â”  Verifying 'PhantomPHP' script permissions..."
  sleep 1
  if [[ ! -x "$HOME/phantomphp/bin/phantom" ]]; then
    yellow "âš   'PhantomPHP' is not executable. Fixing permissions..."
    chmod +x "$HOME/phantomphp/bin/phantom"
    if [[ $? -ne 0 ]]; then
      red "âœ˜  Error: Failed to make 'PhantomPHP' executable."
      return 1
    fi
    green "âœ”  'PhantomPHP' is now executable."
  else
    green "âœ”  'PhantomPHP' is already executable."
  fi
  space

  # Check or create the symlink
  blue "â”  Checking if symlink exists in '$HOME/bin'..."
  sleep 1
  if [[ ! -L "$HOME/bin/phantom" ]]; then
    yellow "âš   Symlink not found. Creating symlink for 'PhantomPHP'..."
    ln -s "$HOME/phantomphp/bin/phantom" "$HOME/bin/phantom"
    if [[ $? -eq 0 ]]; then
      green "âœ”  Symlink created: $HOME/bin/phantom"
    else
      red "âœ˜  Error: Failed to create symlink."
      return 1
    fi
  else
    yellow "âš   Symlink already exists: $HOME/bin/phantom"
  fi
  space

  # Add alias to ~/.bashrc
  blue "â”  Checking for alias in '.bashrc'..."
  sleep 1
  if ! grep -q 'alias phantom=' ~/.bashrc; then
    yellow "âš   Alias for 'phantomphp' not found. Adding alias..."
    echo 'alias sgit="$HOME/bin/phantomphp"' >> ~/.bashrc
    green "âœ”  Alias added to '.bashrc'."
  else
    yellow "âš   Alias for 'phantom' already exists in '.bashrc'."
  fi
  space

  # Reload bash configuration
  blue "â”  Applying changes to shell..."
  sleep 1
  source ~/.bashrc
  if [[ $? -eq 0 ]]; then
    green "âœ”  All changes applied successfully. PhantomPHP is ready to use!"
  else
    red "âœ˜  Error: Failed to reload '.bashrc'."
  fi
  space
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  green "       PhantomPHP setup complete!        "
  green "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  space
}


install_server
